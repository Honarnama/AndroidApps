<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="fill_parent" android:layout_width="fill_parent"
            android:background="#ffffff">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/edit_item_photos_title"
                android:layout_marginTop="10dp"
                style="@style/section_title"
                />

        <TextView android:id="@+id/itemImageHint"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/edit_item_photos_description"
                  android:gravity="right"
                  android:layout_gravity="center"
                  android:textColor="@color/hint_color_custom"
                  android:layout_margin="5dp"
                  android:textSize="12sp"
                />

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dip">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.parse.ImageSelector
                        android:id="@+id/itemImage1"
                        android:src="@drawable/camera"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        app:removable="true"
                        app:imageSelectorIndex="1"
                        app:outputX="600"
                        app:outputY="462"
                        android:layout_width="200dp"
                        android:layout_height="154dp"
                        />
                <com.parse.ImageSelector
                        android:id="@+id/itemImage2"
                        android:src="@drawable/camera"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        app:removable="true"
                        app:imageSelectorIndex="2"
                        app:outputX="600"
                        app:outputY="462"
                        android:layout_width="200dp"
                        android:layout_height="154dp"
                        />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.parse.ImageSelector
                        android:id="@+id/itemImage3"
                        android:src="@drawable/camera"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        app:removable="true"
                        app:imageSelectorIndex="3"
                        app:outputX="600"
                        app:outputY="462"
                        android:layout_width="200dp"
                        android:layout_height="154dp"
                        />
                <com.parse.ImageSelector
                        android:id="@+id/itemImage4"
                        android:src="@drawable/camera"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        app:removable="true"
                        app:imageSelectorIndex="4"
                        app:outputX="600"
                        app:outputY="462"
                        android:layout_width="200dp"
                        android:layout_height="154dp"
                        />
            </TableRow>
        </TableLayout>

        <View style="@style/HorizontalSeparatorLine"/>

        <TextView
                android:text="@string/edit_item_details_title"
                android:layout_marginTop="10dp"
                style="@style/section_title"
                />

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/edit_item_details_description"
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/hint_color_custom"
                android:layout_margin="5dp"
                android:textSize="12sp"
                />

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginTop="5dp"
                      android:layout_marginRight="5dp" android:layout_marginLeft="5dp">
            <EditText android:id="@+id/editProductTitle"
                      android:layout_width="0dp" android:layout_height="45dp"
                      android:hint="@string/edit_item_title_hint"
                      android:singleLine="true"
                      android:textSize="16sp"
                      android:layout_weight="2"
                      android:ellipsize="start"
                      android:textColorHint="@color/default_hint_color_for_android"
                      android:gravity="right"
                    />
            <TextView
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center|top"
                    android:textStyle="bold"
                    />
        </LinearLayout>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/edit_item_title_sub_hint"
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/hint_color_custom"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="انتخاب دسته‌ی آگهی"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:id="@+id/choose_category_button"
                />
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_margin="5dp">
            <EditText android:id="@+id/editProductDescription"
                      android:layout_width="0dp" android:layout_height="100dp"
                      android:hint="@string/edit_item_description_hint"
                      android:singleLine="true"
                      android:textSize="14sp"
                      android:layout_weight="2"
                      android:lines="5"
                      android:ellipsize="start"
                      android:textColorHint="@color/default_hint_color_for_android"
                      android:gravity="right"
                    />
            <TextView
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center|top"
                    android:textStyle="bold"
                    />
        </LinearLayout>


        <Button
                android:id="@+id/saveItemButton"
                android:text="@string/edit_item_save"
                android:layout_margin="10dp"
                style="@style/sell_full_width_button"
                />

    </LinearLayout>
</ScrollView>