        <TextView
                android:text="@string/edit_item_details_title"
                android:layout_marginTop="20dp"
                style="@style/section_title"
                />


        <EditText android:id="@+id/editProductTitle"
                  android:hint="@string/edit_item_title_hint"
                  style="@style/bordered_edit_text"
                  android:layout_marginLeft="16dp"
                  android:layout_marginRight="16dp"
                  android:layout_marginTop="10dp"
                />

        <TextView android:text="@string/edit_item_title_sub_hint"
                  style="@style/tiny_text_view"
                  android:layout_marginRight="16dp"
                  android:gravity="right"
                />


        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginTop="10dp"
                      android:layout_marginRight="16dp" android:layout_marginLeft="16dp">

            <EditText android:id="@+id/editItemPrice"
                      android:layout_width="0dp"
                      android:hint="قیمت محصول"
                      android:layout_weight="2"
                      style="@style/bordered_edit_text"
                      android:inputType="number"
                    />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      style="@style/default_text_view"
                      android:text="تومان"
                      android:layout_gravity="left|center"
                      android:gravity="left|center"
                    />

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/edit_item_category_container"
                      android:orientation="horizontal"
                      android:layout_marginRight="16dp"
                      android:layout_marginLeft="16dp"
                      android:layout_marginTop="10dp"
                      android:layout_gravity="center"
                >
            <TextView style="@style/default_text_view"
                      android:text="دسته‌بندی آگهی:"
                      android:layout_centerVertical="true"
                      android:id="@+id/edit_item_category_text_view"
                      android:editable="false"
                      android:cursorVisible="false"
                      android:focusable="false"
                      android:clickable="true"
                      android:textStyle="bold"
                      android:layout_gravity="center"
                    />
            <Button android:layout_width="wrap_content" android:layout_height="40dp"
                    android:text="انتخاب"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:id="@+id/edit_item_category_semi_button"
                    android:background="@color/extra_dark_green"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="10dp"
                    />
        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginTop="10dp"
                      android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
                >
            <EditText android:id="@+id/editProductDescription"
                      android:hint="@string/edit_item_description_hint"
                      style="@style/bordered_multiline_edit_text"
                    />
        </LinearLayout>


        <Button
                android:id="@+id/saveItemButton"
                android:text="@string/edit_item_save"
                style="@style/sell_full_width_button"
                android:layout_marginTop="10dp"
                />

    </LinearLayout>
</ScrollView>