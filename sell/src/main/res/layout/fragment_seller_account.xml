<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="fill_parent" android:layout_width="fill_parent"
            android:background="#ffffff" android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    tools:context="net.honarnama.sell.activity.ControlPanelActivity"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layoutDirection="rtl"
            >

        <TextView
                android:id="@+id/seller_account_fragment_subtitle"
                android:text="@string/register_form_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:textColor="#7E57C2"
                android:layout_marginTop="10dp"
                />
        <LinearLayout
                android:id="@+id/seller_account_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seller_account_fragment_subtitle"
                android:layout_alignParentRight="true"
                android:background="#ffffff"
                android:gravity="right"
                android:orientation="vertical"
                >
            <EditText
                    android:id="@+id/seller_account_firstname_edit_text"
                    android:layout_width="match_parent" android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:hint="@string/name"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:ellipsize="start"
                    android:gravity="right"
                    android:textColorHint="@color/android_default_hint_color"
                    >
                <requestFocus/>
            </EditText>
            <EditText
                    android:id="@+id/seller_account_lastname_edit_text"
                    android:layout_width="match_parent" android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:hint="@string/family_name"
                    android:layout_alignParentTop="true"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:ellipsize="start"
                    android:gravity="right"
                    android:textColorHint="@color/android_default_hint_color"
                    />
        </LinearLayout>
        <Button
                android:id="@+id/seller_account_alter_name_button"
                android:text="@string/alter_name"
                android:layout_below="@id/seller_account_name_layout"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                style="@style/button_full_width"
                />

        <RelativeLayout
                android:id="@+id/seller_account_password_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seller_account_alter_name_button"
                >
            <TextView
                    android:id="@+id/seller_account_new_password_star_marker"
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center|top"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />
            <EditText
                    android:id="@+id/seller_account_new_password_edit_text"
                    android:layout_width="fill_parent" android:layout_height="45dp"
                    android:inputType="textWebPassword"
                    android:hint="@string/new_password_hint"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:ellipsize="start"
                    android:textColorHint="@color/android_default_hint_color"
                    android:gravity="right"
                    android:layout_toLeftOf="@id/seller_account_new_password_star_marker"
                    />
        </RelativeLayout>

        <Button
                android:id="@+id/seller_account_alter_password_button"
                android:text="@string/alter_password"
                android:layout_below="@id/seller_account_password_layer"
                android:gravity="center"
                android:layout_marginTop="10dp"
                style="@style/button_full_width"
                />
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/seller_accouunt_verification_docs_layer"
                        android:layout_below="@id/seller_account_alter_password_button"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/seller_account_national_card_image_layer"
                    >

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/add_national_card_image_text"
                          android:gravity="center"
                          android:layout_gravity="center"
                          android:textColor="@color/aabi_logo"
                          android:textSize="16sp"
                          android:clickable="true"
                          android:id="@+id/seller_account_national_card_title_text_view"
                          android:layout_alignParentTop="true"
                        />
                <com.parse.ImageSelector
                        android:id="@+id/seller_account_national_card_image_view"
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:src="@drawable/default_national_card"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="10dip"
                        app:removable="false"
                        app:outputX="600"
                        app:outputY="420"
                        android:layout_below="@id/seller_account_national_card_title_text_view"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seller_account_national_card_layer"
                    android:layout_below="@id/seller_account_national_card_image_layer"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:id="@+id/seller_account_card_number_star_marker"
                        android:text="*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|top"
                        />

                <EditText
                        android:id="@+id/seller_account_bank_card_number_edit_text"
                        android:layout_width="fill_parent" android:layout_height="45dp"
                        android:inputType="text"
                        android:hint="@string/shetab_catd_number_hint_text"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:ellipsize="start"
                        android:textColorHint="@color/android_default_hint_color"
                        android:gravity="right"
                        android:layout_toLeftOf="@id/seller_account_card_number_star_marker"
                        />

            </LinearLayout>

            <TextView
                    android:id="@+id/seller_account_alter_card_number_text_view"
                    android:text="@string/register_card_number_alert_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_below="@id/seller_account_national_card_layer"
                    />
            <Button
                    android:id="@+id/seller_account_resend_verification_docs_button"
                    android:text="@string/resend_verification_docs"
                    android:layout_below="@id/seller_account_alter_card_number_text_view"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    style="@style/button_full_width"
                    />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>