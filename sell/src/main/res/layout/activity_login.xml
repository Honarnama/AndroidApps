            <!--android:clickable="true"-->
            <!--/>-->

            <RelativeLayout
                    android:id="@+id/login_form_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_super_extra_light"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/login_slogan_for_sellers_text_view"
            >

                <EditText
                        android:id="@+id/login_username_edit_text"
                        android:inputType="textWebEmailAddress"
                        android:hint="@string/username_hint"
                        android:layout_alignParentTop="true"
                        style="@style/edit_text_default"
                        android:padding="10dp"
                />
                <Button
                        android:id="@+id/send_login_link_btn"
                        android:text="ارسال لینک ورود به برنامه"
                        android:layout_below="@id/login_username_edit_text"
                        style="@style/sell_full_width_button"
                        android:background="@color/gray_dark"
                        android:layout_margin="0dp"
                        android:layout_marginTop="10dp"

                />
            </RelativeLayout>

            <TextView
                    android:id="@+id/login_hint"
                    android:text= "@string/login_hint"
                    android:layout_below="@id/login_form_layout"
                    android:layout_alignParentRight="true"
                    style="@style/tiny_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    android:layoutDirection="rtl"
                    android:gravity="right"
            />

            <Button
                    android:id="@+id/register_as_seller_btn"
                    android:text="@string/register_account"
                    android:layout_below="@id/login_hint"
                    style="@style/button_wrap_content_width"
                    android:background="@drawable/rounded_corner_green"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
            />

