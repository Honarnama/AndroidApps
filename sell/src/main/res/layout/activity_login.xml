<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:background="@color/main_back"
                android:fadeScrollbars="false"
                android:layoutDirection="rtl"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                >
            <ImageView
                    android:id="@+id/login_main_logo_image_view"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/logo_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />
            <TextView
                    android:id="@+id/login_sell_on_honarnama_text_view"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@id/login_main_logo_image_view"
                    android:textSize="26sp"
                    android:text="@string/sell_on_honarnama"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
            <TextView
                    android:id="@+id/login_slogan_for_sellers_text_view"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@id/login_sell_on_honarnama_text_view"
                    android:textSize="16sp"
                    android:text="@string/slogan_for_sellers"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    />


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/login_message_container"
                          android:layout_below="@id/login_slogan_for_sellers_text_view"
                          android:layout_marginTop="10dp"
                          style="@style/ErrorStyle"
                          android:gravity="right"
                          android:visibility="gone"
                          android:padding="5dp">
                <TextView android:id="@+id/login_message_text_view"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          style="@style/ErrorStyle"
                          android:padding="5dp"/>
                <!--
                <Button android:id="@+id/resend_activation_link"
                        style="@style/ErrorButtonStyle"
                        android:text="ارسال مجدد لینک فعال‌سازی"
                        />
                        -->
            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/login_form_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_super_extra_light"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_below="@id/login_message_container"
                    >

                <EditText
                        android:id="@+id/login_username_edit_text"
                        android:inputType="textWebEmailAddress"
                        android:hint="@string/username_hint"
                        android:layout_alignParentTop="true"
                        style="@style/edit_text_default"
                        android:padding="10dp"
                        />
                <EditText
                        android:id="@+id/login_password_edit_text"
                        android:inputType="textWebPassword"
                        android:hint="@string/password_hint"
                        android:layout_below="@id/login_username_edit_text"
                        style="@style/edit_text_default"
                        android:padding="10dp"
                        />
                <Button
                        android:id="@+id/login_button"
                        android:text="@string/enter_button"
                        android:layout_below="@id/login_password_edit_text"
                        style="@style/sell_full_width_button"
                        android:background="@color/gray_button_back"
                        android:layout_margin="0dp"
                        android:layout_marginTop="10dp"

                        />
            </RelativeLayout>
            <TextView
                    android:id="@+id/forgot_password_text_view"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:layout_below="@id/login_form_layout"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />
            <TextView
                    android:id="@+id/register_as_seller_text_view"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@id/forgot_password_text_view"
                    android:text="@string/register_account"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue"
                    android:clickable="true"
                    />

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/register_as_seller_text_view"
                          android:layout_centerHorizontal="true"
                          android:background="@color/telegram_blue"
                          android:id="@+id/telegram_login_container"
                          android:layout_marginTop="15dp"
                          android:orientation="horizontal"
                          android:padding="10dp"
                          android:clickable="true"
                    >
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/telegram_icon"
                           android:layout_gravity="center_vertical"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/log_in_with_telegram"
                        android:textColor="#ffffff"
                        android:id="@+id/telegram_login_text_view"
                        android:background="@color/telegram_blue"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
