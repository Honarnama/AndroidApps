<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="0dp"
                android:background="@color/gray_extra_light"
                android:layout_gravity="right"
                android:gravity="right"
                android:layoutDirection="rtl"
        >
<LinearLayout
        android:id="@+id/loading_circle_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="5dp"
        >
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"/>
</LinearLayout>

<ListView android:id="@+id/shops_listView"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:divider="@android:color/transparent"
          android:dividerHeight="5dp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="10dp"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
        />

<RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_shops_warning_container"
                android:layout_centerInParent="true"
                android:visibility="gone"
        >

    <TextView android:id="@+id/empty_shops_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/tiny_text_view"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:background="@drawable/important_bar_background"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:paddingLeft="10dp"
              android:paddingRight="30dp"
              android:text="@string/no_shop_found"
            />

    <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/no_shop_warning_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:iiv_color="@color/orange"
            app:iiv_icon="gmd-info"
            android:layout_toRightOf="@id/empty_shops_text_view"
            android:layout_marginLeft="-24dp"
            android:layout_centerVertical="true"
            />
</RelativeLayout>
</RelativeLayout>