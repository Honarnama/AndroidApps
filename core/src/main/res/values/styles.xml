    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="full_width_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_text_default" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/android_default_hint_color</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_edit_text_text_color</item>
        <item name="colorControlNormal">#c5c5c5</item>

    </style>

    <style name="button_wrap_content_width" parent="full_width_button">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="Theme.Holo.Dialog.NoActionBar" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/nokhodi_khardeli</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ErrorStyle" >
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/narenji</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ErrorButtonStyle" >
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="HorizontalSeparatorLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c0c0c0</item>
    </style>

    <style name="DialogActivityTitle">
        <!--
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/teal</item>
        -->
        <item name="android:textColor">@color/extra_dark_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
