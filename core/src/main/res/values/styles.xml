    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="full_width_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="edit_text_default" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/default_hint_color_for_android</item>
        <item name="android:gravity">right|center</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_edit_text_text_color</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="android:padding">10dp</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="bordered_edit_text" parent="edit_text_default">
        <item name="android:background">@drawable/bordered_background</item>
    </style>


    <style name="bordered_multiline_edit_text" parent="bordered_edit_text">
        <item name="android:background">@drawable/bordered_background</item>
        <item name="android:gravity">right|top</item>
        <item name="android:singleLine">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_edit_text_text_color</item>
        <item name="android:textColorHint">@color/default_hint_color_for_android</item>
    </style>

    <style name="button_wrap_content_width" parent="full_width_button">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="Theme.Holo.Dialog.NoActionBar" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!--
        <style name="DialogStyle" parent="@android:style/Theme.Dialog">
            <item name="android:textColor">@color/nokhodi_khardeli</item>
            <item name="android:textSize">18sp</item>
        </style>
        -->

    <style name="ErrorStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:background">@color/narenji</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ErrorButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="HorizontalSeparatorLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c0c0c0</item>
    </style>

    <style name="DialogTitle">
        <!--
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/teal</item>
        -->
        <item name="android:textColor">@color/gray_extra_dark</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>

    </style>


    <style name="tiny_text_view">
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="core_wrap_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_extra_dark</item>
        <item name="android:shadowColor">@color/transparent_white</item>
    </style>

    <style name="core_full_width_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/amber</item>
    </style>

    <style name="section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/gray_super_extra_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="default_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Custom</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="DialogWindowTitle_Custom">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance_DialogWindowTitle</item>
        <item name="android:background">@color/cyan</item>
    </style>

    <style name="TextAppearance_DialogWindowTitle"
           parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>


    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Custom</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.Holo.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>
